<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
     <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<body>
    <div class="main w-full min-h-screen ">
        <div class="form p-10 text-white">
            <form action="/create" method="post">
            <input type="text" class="block w-full rounded-md outline-none px-5 py-2 bg-zinc-900" placeholder="Type something..."  name="tittle">
            <textarea class="block w-full mt-2 rounded-md outline-none px-5 py-2 resize-none bg-zinc-900" placeholder="Type something..." name="details"></textarea>
            <input type="submit" value="create task" class="mt-2 bg-blue-600 px-5 py-2 rounded-md cursor-pointer hover:bg-blue-700">
        </form>
        </div>
        <div class="tasks p-10 flex gap-3 flex-wrap">
            <% if (files.length > 0) { %>
                <% files.forEach(function(val) { %>
                    <div class="task w-72  px-3 py-4 bg-zinc-800">
            <h1 class="text-white text-3xl tracking-tight"><%= val %></h1>
            <div class="w-full flex justify-between items-center">
            <a class="text-blue-600 inline-block mt-3" href="/file/<%= val %>">read more</a>
            <a href="/edit/<%= val %>">edit</a>
            </div>
            </div>
       <%  }) %>
<% } else { %>
                <h2>no task yet</h2>
            <% } %>
        </div>
    </div>
</body>
</html>
